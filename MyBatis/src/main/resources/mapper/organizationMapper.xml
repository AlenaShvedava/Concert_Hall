    <resultMap id="organizationResultMap" type="pl.solvd.concerthalls.binary.Organization" autoMapping="false">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="program" ofType="pl.solvd.concerthalls.binary.Program"
                    resultMap="ProgramResultMap"/>
    </resultMap>
    <resultMap id="ProgramResultMap" type="pl.solvd.concerthalls.binary.Program" autoMapping="false">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="age_limit" property="ageLimit"/>
        <result column="base_price" property="basePrice"/>
    </resultMap>
</mapper>
